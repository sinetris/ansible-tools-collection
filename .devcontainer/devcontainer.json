{
  "name": "sinetris.tools-dev-container",
  "build": {
    "dockerfile": "assets/Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace/ansible_collections/sinetris/tools/",
  "workspaceMount": "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind",
  "remoteUser": "vscode",
  "runArgs": [
    "--hostname=ansible-dev-container"
  ],
  "updateRemoteUserUID": true,
  "privileged": true,
  "containerEnv": {
    "PROJECT_WORKDIR": "${containerWorkspaceFolder}"
  },
  "mounts": [
    "source=${devcontainerId}_cache_ansible_collections,target=${containerWorkspaceFolder}ansible_collections,type=volume",
    "source=${devcontainerId}_cache_ansible,target=${containerWorkspaceFolder}.ansible,type=volume",
    "source=${devcontainerId}_cache_tox,target=${containerWorkspaceFolder}.tox,type=volume",
    "source=${devcontainerId}_cache_venv,target=${containerWorkspaceFolder}.venv,type=volume",
    "source=${devcontainerId}_tmp_volume,target=/tmp,type=volume"
  ],
  "onCreateCommand": {
    "fix_ansible_collections_permissions": "sudo chown -R $(whoami) ${containerWorkspaceFolder}ansible_collections",
    "fix_ansible_permissions": "sudo chown -R $(whoami) ${containerWorkspaceFolder}.ansible",
    "fix_tox_permissions": "sudo chown -R $(whoami) ${containerWorkspaceFolder}.tox",
    "fix_venv_permissions": "sudo chown -R $(whoami) ${containerWorkspaceFolder}.venv"
  },
  "postCreateCommand": [
    "/bin/sh",
    "-c",
    "${containerWorkspaceFolder}/.devcontainer/assets/postCreateCommand.sh"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "ms-python.flake8",
        "ms-python.pylint",
        "ms-python.python",
        "ms-python.pylint",
        "takumii.markdowntable",
        "vscode-icons-team.vscode-icons",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "editor.tabSize": 4,
        "terminal.integrated.fontFamily": "'MesloLGM NF', '0xProto Nerd Font', monospace",
        "terminal.integrated.fontLigatures.enabled": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh",
            "icon": "terminal-ubuntu"
          }
        },
        "workbench.iconTheme": "vscode-icons"
      }
    }
  },
  "features": {
    "ghcr.io/jungaretti/features/make:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {}
  }
}
